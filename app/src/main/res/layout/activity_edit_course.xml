<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCourseActivity">

  <EditText
      android:id="@+id/edtCourseName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Course Name"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/edtDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/edtDescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Course Description"
      android:inputType="textMultiLine"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/edtPrice"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtCourseName" />

  <EditText
      android:id="@+id/edtPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Course Price"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/edtCourseSuitFor"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtDescription" />

  <EditText
      android:id="@+id/edtCourseSuitFor"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Course Suited For"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/edtCourseImageLink"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtPrice" />

  <EditText
      android:id="@+id/edtCourseImageLink"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Course Image Link"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/edtCourseLink"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtCourseSuitFor" />

  <EditText
      android:id="@+id/edtCourseLink"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Course Link"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/edtCourseBtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtCourseImageLink" />

  <Button
      android:id="@+id/edtCourseBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Add"
      app:layout_constraintBaseline_toBaselineOf="@+id/edtCourseDltBtn"
      app:layout_constraintEnd_toStartOf="@+id/edtCourseDltBtn"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />

  <ProgressBar
      android:id="@+id/edtCourseBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="35dp"
      android:layout_height="34dp"
      android:indeterminate="true"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.45" />

  <Button
      android:id="@+id/edtCourseDltBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Delete"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/edtCourseBtn"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.941" />

</androidx.constraintlayout.widget.ConstraintLayout>